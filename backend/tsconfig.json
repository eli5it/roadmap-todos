{
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./src/types"]
    }
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src", "src/types/**/*"],
  "exclude": [
    "dist",
    "tests",
    "vitest.config.ts",
    "drizzle.config.ts",
    "node_modules"
  ],
  "references": []
}
